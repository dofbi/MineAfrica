$setup = <<SCRIPT
    cd /home/vagrant/minecruft/Minecraft_Server
    sudo ./setup_bridge.sh
SCRIPT

Vagrant.configure("2") do |config|
    config.vm.box = "ubuntu/xenial64"
    config.vm.hostname = "PTDemo"

    config.vm.provider "virtualbox" do |a|
        a.memory = "2048"
        a.name = "Bridge_Node"
    end

    config.vm.network "public_network", ip: "192.168.2.177"
    config.vm.synced_folder "..", "/home/vagrant/minecruft"

    config.vm.provision "shell", inline: $setup
    config.ssh.forward_agent = true
end
  
